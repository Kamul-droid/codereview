{% extends 'base.html.twig' %}
{% block title %} Exercices{% endblock title %}
{% block body %}
<main>

    <section class="section-padding" id="section_3">
        <div class="container">
            <div class="row">

                <div class="col-lg-12 col-12 text-center mb-4">
                    <h2>Nos exercices</h2>
                </div>
                 {% for exercice in exercices %}
                    <div class="col-lg-4 col-md-6 col-12 mb-4 mb-lg-0">
                        <div class="custom-block-wrap">
                          <a href="{{path('app_exercice_show', {'id': exercice.id})}}" class="blog_link card-img-top">
                            
                            {% for image in exercice.images %}

                                <div class="container col md5">
                                    <img src="{{asset('/uploads/' ~ image.name)}}" alt="article" width="150" , height="150"> 
                                    </div>

                                {% endfor %} 

                            </a>
                            <div class="custom-block">
                                <div class="custom-block-body">
                                    <h5 class="mb-3">{{ exercice.nom }}</h5>

                                    <p>{{ exercice.description }}</p>

                                    <div class="progress mt-4">
                                        <div class="progress-bar w-75" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>

                                    <div class="d-flex align-items-center my-2">
                                        <p class="mb-0">
                                            <strong>Resolu</strong>
                                            12
                                        </p>

                                        <p class="ms-auto mb-0">
                                            <strong>Nombre de tentative:</strong>
                                            32
                                        </p>
                                    </div>
                                </div>

                                <a href="{{ path('app_exercice_show', {'id': exercice.id}) }}" class="custom-btn btn-primary"> RÃ©soudre</a>

                                
                            </div>
                        </div>
                    </div>
                {% endfor %}
             
            </div>
        </div>
    </section>

</main>

{% endblock body %}